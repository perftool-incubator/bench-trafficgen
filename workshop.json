{
  "workshop": {
    "schema": {
      "version": "2020.03.02"
    }
  },
  "userenvs": [
    {
      "name": "alma8",
      "requirements": [
        "dev-tools",
        "trafficgen-os-dependencies",
        "set-python3.9",
        "pip",
        "trex1",
        "trex2"
      ]
    }
  ],
  "requirements": [
    {
      "name": "dev-tools",
      "type": "distro",
      "distro_info": {
        "groups": [
          "\"Development Tools\""
        ]
      }
    },
    {
      "name": "trafficgen-os-dependencies",
      "type": "distro",
      "distro_info": {
        "packages": [
          "rdma-core-devel",
          "dpdk-tools",
          "net-tools",
          "which",
          "bc",
          "python39-devel",
          "numactl-devel",
          "cmake",
          "libarchive"
        ]
      }
    },
    {
      "name": "pip",
      "type": "python3",
      "python3_info": {
         "packages": [
           "pyyaml",
           "jsonschema",
           "redis",
           "hiredis"
         ]
       }
    },
    {
      "name": "trex1",
      "type": "files",
      "files_info": {
        "files": [
          {
            "src": "%bench-dir%/trafficgen/install-trex.sh",
            "dst": "/usr/bin"
          },
          {
            "src": "%bench-dir%/trafficgen/install-moongen.sh",
            "dst": "/usr/bin"
          }
        ]
      }
    },
    {
      "name": "trex2",
      "type": "manual",
      "manual_info": {
        "commands": [
          "/usr/bin/install-trex.sh --insecure",
          "/usr/bin/install-moongen.sh"
        ]
      }
    },
    {
      "name": "set-python3.9",
      "type": "manual",
      "manual_info": {
        "commands": [
          "alternatives --set python3 /usr/bin/python3.9"
        ]
      }
    }
  ]
}
